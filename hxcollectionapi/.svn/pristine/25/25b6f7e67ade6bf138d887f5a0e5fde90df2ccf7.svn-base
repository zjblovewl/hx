		header.setUser_id(userId);

		if(body == null || body.equals(""))
		{
			Map<String,Object> resultMap = new HashMap<>();
			body = resultMap;
		}

		ResponseParamVo responseParamVo = new ResponseParamVo(header,body);
		try {
			log.info("返回结果为：{}",objectMapper.writeValueAsString(responseParamVo));
		} catch (Exception e) {
			e.printStackTrace();
		}
		return responseParamVo;
	}
