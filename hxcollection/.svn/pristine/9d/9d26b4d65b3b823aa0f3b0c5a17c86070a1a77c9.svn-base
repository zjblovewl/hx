</aside>
<section class="Hui-article-box">
    <div class="logo_txt">乾隆管理平台</div>
    <div id="Hui-tabNav" class="Hui-tabNav hidden-xs">
        <div class="Hui-tabNav-wp">
            <ul id="min_title_list" class="acrossTab cl" style="width: 133px; left: 0px;">
                <li class="active">
                    <span title="我的桌面" data-href="##">我的桌面</span>
                    <em></em></li>
            </ul>
        </div>
    </div>
    <div id="iframe_box" class="Hui-article">
        <div class="show_iframe">
            <div style="display:none" class="loading"></div>
            <iframe scrolling="no" frameborder="0" src="userHistory.html"></iframe>
        </div>
    </div>
</section>
<script type="text/javascript">
$(function(){
   $("#menu_dropdown").on('click',".menu-parent",function (ele) {
        $(this).next().slideToggle();
        var clickIndex = $(".menu-parent").index(this);
        console.log($(this).text())
        $(".menu-parent-ul").each(function (index,ele) {
            if(index != clickIndex){
              $(this).slideUp();
            }
        });
   });
    $("#menu_dropdown").on('click',".menu-child-a",function () {
       var url = $(this).attr("data-href");
       $("#iframe_box").find("iframe").attr("src",url);
       $(this).next().slideToggle();
   });

    $("#menu_dropdown").delegate('.menu-child-ul',"click",function () {
        var url = $(this).find('a').attr("data-href");
        $("#iframe_box").find("iframe").attr("src",url);
        console.log($(this).text())
    });

    var asideJson = [
        {
            name:"系统设置",
            children:[
                {
                    name:"角色管理",
                    url:"userHistory.html",
                    children:[]
                },
                {
                    name:"菜单管理",
                    children:[
                        {
                            name:"菜单名称",
                            children:[{
                                name:"详情",
                                url:"userDetail.html",
                                children:[]
                            }]
                        }
                    ]
                }
            ]
        }
    ]
    initAsideMenu(asideJson,0);
    function initAsideMenu(params,num) {
      for(let i=0;i<params.length;i++){
          if(num == 0){
              var asideStr = '<dl id="'+i+'">' +
                  "<dt class='menu-parent'><i class='fa fa-user-circle-o font-left'></i>"+params[i].name+"<i class='fa fa-caret-down font-right' aria-hidden='true'></i></dt>";
          }else{
              var asideStr_ul = '<dd class="menu-parent-ul"><ul>';
          }
          if(params[i].children.length != 0){
              initAsideMenu(params[i].children,1);
          }else{
             asideStr += '</dl>';
              break;
          }
      }
    }
   var htmlCode = "";
   for(let i= 0;i< asideJson.length;i++){
       var asideStr = '<dl id="'+i+'">' +
           "<dt class='menu-parent'><i class='fa fa-user-circle-o font-left'></i>"+asideJson[i].name+"<i class='fa fa-caret-down font-right' aria-hidden='true'></i></dt>";
       var asideStr_ul = '<dd class="menu-parent-ul"><ul>';
        for(let j =0;j<asideJson[i].children.length;j++){
            if(asideJson[i].children[j].children.length){
                asideStr_ul += '<li><a class="menu-child-a"  href="javascript:void(0)">'+asideJson[i].children[j].name+'<i class="fa fa-caret-down font-right" aria-hidden="true"></i></a>'+
                    '<ul class="menu-child-ul">';
                for(let k=0;k<asideJson[i].children[j].children.length;k++){
                    asideStr_ul += '<li><a data-href="userHistory.html" href="javascript:void(0)">'+asideJson[i].children[j].children[k].name+'</a></li>';
                }
                asideStr_ul += "</ul></li>";
            }else{
                asideStr_ul += '<li><a class="menu-child-a" data-href="userDetail.html" href="javascript:void(0)">'+asideJson[i].children[j].name+'</a></li>';
            }
        }
       asideStr_ul +="</ul></dd>";
       asideStr += asideStr_ul+"</dl>";
       htmlCode += asideStr;
    }
    $("#menu_dropdown").append(htmlCode);
});

</script>

</body>
