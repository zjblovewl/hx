        ct.user_id comment_user_id,
        us.nick_name comment_nick_name,
        usimage.image_url comment_head_url,
        usimage.image1_url comment_head1_url,
        usimage.image2_url comment_head2_url,
        rs.id replay_user_id,
        rs.nick_name replay_nick_name,
        rsimage.image_url replay_head_url,
        rsimage.image1_url replay_head1_url,
        rsimage.image2_url replay_head2_url,
        ct.comment_content comment_content,
        ct.create_time as create_time
    FROM hxdb.hx_goods_comment ct
    left join hxdb.hx_user us on ct.user_id = us.id
    left join hxdb.hx_user rs on ct.reply_user_id = rs.id
    left join hxdb.sys_images usimage on usimage.id = us.mobile_image_ids
    left join hxdb.sys_images rsimage on rsimage.id = rs.mobile_image_ids
    where goods_type = #{commentType}
    and goods_id = #{goodsId}
    order by ct.create_time desc

  </select>
