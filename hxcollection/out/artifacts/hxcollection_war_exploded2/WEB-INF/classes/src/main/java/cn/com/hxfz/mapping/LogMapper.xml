<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.com.hxfz.dao.LogDao" >
	
	<resultMap type="cn.com.hxfz.model.User" id="BaseResultMap">
		<id column="id" property="id"  jdbcType="INTEGER"/>
    	<result column="name"  property="name" jdbcType="VARCHAR"/>
    	<result column="password"  property="password" jdbcType="VARCHAR"/>
	</resultMap>
  	
   <select id="getLogin" parameterType="map" resultMap="BaseResultMap">
   		select id,name,password from hxdc.tab_uc_user where name=#{name} and password=#{password}
   </select>
</mapper>