  <select id="selectDetailByUserId" resultType="map" parameterType="java.lang.String">
      SELECT
          COALESCE(temp.dic_name) as bank_name,
          COALESCE(re.bank_no ,'') as bank_no,
          re.withdrawals_amount as withdrawals_amount,
          to_char(re.create_time,'yyyy-MM-dd HH24:MI:SS') as create_time
      FROM hxdb.hx_withdrawals_record re
      left join (select * from hxdb.sys_dictionary t where t.pid = (select id from hxdb.sys_dictionary dit where dit.dic_value = 'bank_type')) temp on re.bank_code = temp.dic_value
