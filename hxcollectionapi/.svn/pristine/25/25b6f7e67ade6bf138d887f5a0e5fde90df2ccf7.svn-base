	//按字节大小截取字符串
	public static String subStr(String str,int len) {
		if(str!=null && str.getBytes().length>len){
			byte[] newValArr = new byte[len];
			System.arraycopy(str.getBytes(), 0, newValArr, 0, newValArr.length);
			str = new String(newValArr);
		}
		return str;
	}
	
