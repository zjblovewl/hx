  	<delete id="deleteImageByIds" parameterType="java.util.HashMap">
  		delete from hxdb.sys_images where id in
  		<foreach item="imageIdList" collection="imageIdList" open="(" separator="," close=")">
            #{imageIdList}
        </foreach>
  	</delete>
